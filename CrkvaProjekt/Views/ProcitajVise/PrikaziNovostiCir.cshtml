@model CrkvaProjekt.ViewModels.NovostiSlike.NovostiSlikeViseVM;
@{ Layout = null;
    ViewData["Title"] = "Детаљи о Новости"; }
<!DOCTYPE html>
<html lang="en">

<head profile="http://gmpg.org/xfn/11">

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Саборна Црква Мостар</title>

    <!-- Bootstrap core CSS -->
    <link href="~/lib/bootstrap/startbootstrap-blog-home-gh-pages/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/lib/bootstrap/startbootstrap-blog-home-gh-pages/css/blog-home.css" rel="stylesheet">
    <style>
        body {
            background-image: url("https://cdn.hipwallpaper.com/i/21/64/hF6GSH.jpg");
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }

        .kolumna {
            float: left;
            width: 25%;
            padding: 10px;
        }

            .kolumna img {
                opacity: 0.8;
                cursor: pointer;
            }

                .kolumna img:hover {
                    opacity: 1;
                }

        .gallery:after {
            content: "";
            display: table;
            clear: both;
        }

        .card-body1 {
            position: relative;
            display: none;
        }

        .closebtn {
            position: absolute;
            top: 10px;
            right: 15px;
            color: white;
            font-size: 35px;
            cursor: pointer;
        }


        .mb-4 {
            border-bottom: thick double #000000;
        }

        .card-body {
            background: #8597aa;
        }

        .moj-img {
            padding: 0px;
            margin-bottom: 7px;
            margin-right: 7px;
            border: solid 1px #000000;
            text-align: center;
            width: 200px;
            height: 200px;
            float: left;
            vertical-align: top;
            object-fit: cover;
        }

        .text-new {
            background: #00738b;
            color: #212529;
        }

        .card-header {
            background-color: #00738b;
        }

        .lista {
            list-style-type: none;
            margin: 0px;
            padding: 0px;
        }

            .lista li a {
                text-align: center;
                display: inline;
                color: #000;
                font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
                font-size: 18px;
                letter-spacing: 0px;
            }

                .lista li a:visited {
                    text-decoration: none;
                    border: 0px;
                }

        .col-md-4 {
            padding-top: 75px;
        }

        .input-group-append {
            float: right;
        }

        #container1 {
            background: #adb5bd;
        }

        #headerslika {
            position: relative;
            top: 25px;
            padding-right: 15px;
            padding-left: 15px;
            padding-bottom: 20px;
            text-align: center;
            color: white;
        }

        .centered {
            position: absolute;
            left: 35%;
            top: 8px;
            font-family: Georgia,sans-serif;
            font-weight: bold;
            font-size: 200%;
        }

        @@media(max-width:415px) {
            #headerslika {
                padding-top: 45px;
            }
        }

        @@media (max-width:768px) {
            .kolumna img {
                width: 70px;
                height: 70px;
            }
        }

        @@media (max-width:280px) {
            .kolumna img {
                width: 50px;
                height: 50px;
            }
        }

        @@media (max-width:395px) {
            .moj-img {
                float: none;
            }
        }
    </style>
</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/Home/IndexCir">Саборна Црква Мостар</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Home/IndexCir">
                            Хоме
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/Home/IndexNovostiCir">Новости
                            <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Мобилна апликација</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/KontaktiCir">Контакти</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <div id="container1" class="container">
        <div id="headerslika">
            <a href="/Home/IndexCir">
                <img style="object-fit:cover; width:100%; height:100px;" src="https://www.frontal.ba/img/s/750x400/upload/images/DEJAN/hrammostar.jpg" />
            </a>
            <div class="centered">Саборна Црква Мостар</div>
        </div>
        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <h1 class="my-4">
                    @ViewData["Title"]
                </h1>

                <!-- Blog Post -->
                @*Blog Post*@

                <div class="card mb-4">
                    <div class="card-body">
                        @if (Model.SlikaThumbnail != null)
                        {
            <img class="moj-img" src="data:image;base64,@System.Convert.ToBase64String(Model.SlikaThumbnail)" alt="Card image cap"> }
        else
        {
<img class="moj-img" src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/6c/No_image_3x4.svg/1200px-No_image_3x4.svg.png" alt="Card image cap" />}
                        <h2 class="card-title">@Model.Naslov</h2>
                        <p class="card-text">@Model.Text</p>
                    </div>
                    <div class="card-footer text-new">
                        Објављено: @Model.DatumObjavljivanja.ToShortDateString()
                    </div>
                </div>
                <!-- Blog Post -->
                <!--<div class="card mb-4">
                    <img class="card-img-top" src="http://placehold.it/750x300" alt="Card image cap">
                    <div class="card-body">
                        <h2 class="card-title">Post Title</h2>
                        <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Reiciendis aliquid atque, nulla? Quos cum ex quis soluta, a laboriosam. Dicta expedita corporis animi vero voluptate voluptatibus possimus, veniam magni quis!</p>
                        <a href="#" class="btn btn-primary">Read More &rarr;</a>
                    </div>
                    <div class="card-footer text-muted">
                        Posted on January 1, 2020 by
                        <a href="#">Start Bootstrap</a>
                    </div>
                </div>-->
                <!-- Galerija slika -->
                <div class="card my-4">
                    <h5 class="card-header">Слика</h5>
                    <div class="card-body1">
                        <span onclick="this.parentElement.style.display='none'" class="closebtn">&times;</span>
                        <img id="expandedImg" style="width:100%">

                    </div>
                </div>
                <div class="gallery">
                    <h2>Галерија Новости</h2>
                    @foreach (var x in Model.lista)
                    {
        <div class="kolumna">
            <img src="data:image;base64,@System.Convert.ToBase64String(x.Slika)" width="158" height="126" onclick="myFunction(this);" />
        </div>}
                </div>

            </div>


            <!-- Sidebar Widgets Column -->
            <div class="col-md-4">

                <div class="card my-4">
                    <h5 class="card-header">Промијени језик</h5>
                    <div class="card-body">
                        <button class="btn btn-secondary" onclick="location.href='@Url.Action("PrikaziNovosti", "ProcitajVise")?NovostiID=@Model.NovostiID'">Ćirilica</button>
                    </div>
                </div>
                <!-- Search Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Претражи Новости</h5>
                    <div class="card-body">
                        <div class="input-group">
                            <form asp-controller="Home" asp-action="IndexNovostiCir">
                                <input style="float:right;" type="submit" class="btn btn-secondary" value="Го!" />
                                <div style="overflow:hidden; padding-right:.5em;">
                                    <input type="text" name="searchString" class="form-control" placeholder="Претражи...">
                                </div>

                            </form>
                        </div>
                    </div>
                </div>

                <!-- Categories Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Информације</h5>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <ul class="lista">
                                    <li>
                                        <a href="/Home/IstorijaCir">Историја</a>
                                    </li>
                                    <li>
                                        <a href="/Home/ParohijeCir">Парохије</a>
                                    </li>
                                    <li>
                                        <a href="/Home/ZdanjaCir">Здања</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-lg-6">
                                <ul class="lista">
                                    <li>
                                        <a href="/Home/RiznicaCir">Ризница</a>
                                    </li>
                                    <li>
                                        <a href="/Home/BibliotekaCir">Библиотека</a>
                                    </li>
                                    <li>
                                        <a href="/Home/LinkoviCir">Корисни линкови</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Side Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Друштвене мреже</h5>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <ul class="lista">
                                    <li>
                                        <table style=" width: 147px; text-align: center; ">
                                            <tbody>
                                                <tr>
                                                    <td>
                                                        <a href="https://twitter.com/SabornaCrkvaMos" target="_blank">
                                                            <img src="http://saborna-crkva-mostar.com/novav/wp-content/uploads/2013/04/twitter.png" />

                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a href="https://www.facebook.com/%D0%A1%D0%90%D0%91%D0%9E%D0%A0%D0%9D%D0%90-%D0%A6%D0%A0%D0%9A%D0%92%D0%90-%D0%A1%D0%92%D0%95%D0%A2%D0%95-%D0%A2%D0%A0%D0%9E%D0%88%D0%98%D0%A6%D0%95-%D0%A1%D0%9F%D0%A6%D0%9E-%D0%9C%D0%BE%D1%81%D1%82%D0%B0%D1%80-572045772819163" target="_blank">
                                                            <img src="http://saborna-crkva-mostar.com/novav/wp-content/uploads/2013/04/facebook.png" />
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a href="https://www.youtube.com/channel/UCTuaQax2uM4IoNxoiGmUCwg" target="_blank">
                                                            <img src="http://saborna-crkva-mostar.com/novav/wp-content/uploads/2013/04/youtube.png" />
                                                        </a>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>

                <!-- Galerija slika side widget-->

            </div>

        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->
    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Цопyригхт &copy; Факултет информацијских технологија 2020</p>
        </div>
        <!-- /.container -->
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="~/lib/bootstrap/startbootstrap-blog-home-gh-pages/vendor/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/startbootstrap-blog-home-gh-pages/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script>function myFunction(imgs) {
            // Get the expanded image
            var expandImg = document.getElementById("expandedImg");
            // Use the same src in the expanded image as the image being clicked on from the grid
            expandImg.src = imgs.src;
            // Show the container element (hidden with CSS)
            expandImg.parentElement.style.display = "block";
        }</script>

</body>

</html>
