@page
@model LoginModel

@{
    ViewData["Title"] = "Admin Login - Saborna Crkva Mostar";
    Layout = "_LayoutAnonim";
}

<h1 style="font-family:Dosis; font-style:italic; font-weight:bold; color:white; text-align:center;padding-bottom:20px;margin-left:100px;"> @ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 col-md-offset-4" style="padding-bottom:20px;">
        <section>
            <form id="account" style="margin-left:420px;" method="post">
                <h4 style="color:white;">Logirajte se sa E-mailom i passwordom</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label style="color:white" asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="color:white" asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label style="color:white "asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Zaboravili ste vašu lozinku?</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
